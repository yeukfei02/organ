{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "pretty": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "deno_ls_plugin"
      }
    ],
    "target": "esnext"
  },
  "include": ["./**/*.ts"]
}
